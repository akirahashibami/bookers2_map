<li class="user-comments">
  <div class="image">
    <%= attachment_image_tag(book_comment.user, :profile_image, size: '50x50', fallback: "no-image.jpg") %>
    <%= book_comment.user.name %>
  </div>
  <div class="comment-text">
    <%= book_comment.comment %>
  </div>
  <% if book_comment.user == current_user %>
    <div>
      <%= link_to "Delete", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
    </div>
  <% end %>
</li>
